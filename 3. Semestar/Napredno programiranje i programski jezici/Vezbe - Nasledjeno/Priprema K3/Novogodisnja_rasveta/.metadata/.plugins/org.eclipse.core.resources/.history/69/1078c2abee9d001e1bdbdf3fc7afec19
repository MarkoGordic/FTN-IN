package novogodisnja_rasveta;

public class Test {
	public static void main(String[] args) {
		Lampion l1 = new Lampion(11, "crvena", 89, true);
		Lampion l2 = new Lampion(l1);
		Lampion l3 = new Lampion(12, "plava", 69, false);
		Lampion l4 = new Lampion(13, "plava", 189, true);
		
		System.out.println(l3);
		System.out.println(l3.popravi());
		System.out.println(l3);
		System.out.println(l1.popravi());
		
		NovogodisnjaRasveta rasveta = new NovogodisnjaRasveta();
		System.out.println(rasveta);
		rasveta.dodaj(l1);
		rasveta.dodaj(l1);
		rasveta.dodaj(l2);
		rasveta.dodaj(l3);
		rasveta.dodaj(l4);
		System.out.println(rasveta);
		
		System.out.println(rasveta.pronadji(60, "plava"));
		System.out.println(rasveta.pronadji(60, "zelena"));
		boolean hm = rasveta.postaviAkciju();
		System.out.println(hm);
		System.out.println(rasveta);
	}
}
